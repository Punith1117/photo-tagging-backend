generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id        Int    @id @default(autoincrement())
  name      String @unique
  timeTaken Int?
}

model Object {
  id     Int     @id
  startX Decimal @db.Decimal(4, 2)
  endX   Decimal @db.Decimal(4, 2)
  startY Decimal @db.Decimal(4, 2)
  endY   Decimal @db.Decimal(4, 2)
}
